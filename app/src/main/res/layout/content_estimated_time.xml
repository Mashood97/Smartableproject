<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.okcomputers.smartableproject.AfterLoginActivities.EstimatedTimeActivity"
    tools:showIn="@layout/activity_estimated_time">



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginTop="18dp"
        android:text="Estimate Time" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:verticalScrollbarPosition="right"
        android:scrollbars="vertical"
        android:layout_marginTop="20dp"
        android:id="@+id/EstlistView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Proceed"
            android:textColor="@color/TextColor2"
            android:background="@drawable/button_background"
            android:text="Prcoeed" />

        <Button
            android:id="@+id/Update"
            android:textColor="@color/TextColor2"
            android:onClick="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_background"
            android:layout_marginStart="15dp"
            android:text="Update" />
    </LinearLayout>
    </LinearLayout>

